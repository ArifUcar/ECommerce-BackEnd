@using E_Commerce.Models.Products

<div class="card product-card h-100">
    <div class="position-relative">
        @if (!string.IsNullOrEmpty(Product.Base64Image))
        {
            <img src="data:image/jpeg;base64,@Product.Base64Image" 
                 class="card-img-top product-image" 
                 alt="@Product.ProductName" />
        }
        else
        {
            <img src="/images/no-image.png" 
                 class="card-img-top product-image" 
                 alt="Ürün görseli bulunamadı" />
        }
    </div>
    
    <div class="card-body d-flex flex-column">
        <h5 class="card-title product-title">@Product.ProductName</h5>
        <p class="card-text description">@Product.Description</p>
        
        @if (Product.ProductDetail != null)
        {
            <div class="product-details">
                @if (!string.IsNullOrEmpty(Product.ProductDetail.Brand))
                {
                    <p class="mb-1"><strong>Marka:</strong> @Product.ProductDetail.Brand</p>
                }
                @if (!string.IsNullOrEmpty(Product.ProductDetail.Model))
                {
                    <p class="mb-1"><strong>Model:</strong> @Product.ProductDetail.Model</p>
                }
                @if (!string.IsNullOrEmpty(Product.ProductDetail.Color))
                {
                    <p class="mb-1"><strong>Renk:</strong> @Product.ProductDetail.Color</p>
                }
                @if (!string.IsNullOrEmpty(Product.ProductDetail.Size))
                {
                    <p class="mb-1"><strong>Boyut:</strong> @Product.ProductDetail.Size</p>
                }
            </div>
        }

        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <span class="price">@Product.Price.ToString("C2")</span>
                <span class="stock @(Product.StockQuantity > 0 ? "text-success" : "text-danger")">
                    @(Product.StockQuantity > 0 ? "Stokta" : "Stokta Yok")
                </span>
            </div>
            
            <div class="mt-2">
                <button class="btn btn-primary w-100" 
                        @onclick="() => OnAddToCart.InvokeAsync(Product)"
                        disabled="@(Product.StockQuantity <= 0)">
                    <i class="bi bi-cart-plus"></i> Sepete Ekle
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.2s;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .product-image {
        height: 200px;
        object-fit: cover;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        height: 2.4rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .description {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 1rem;
        height: 3rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-details {
        font-size: 0.85rem;
        color: #555;
        margin: 0.5rem 0;
        padding: 0.5rem;
        background-color: #f8f9fa;
        border-radius: 4px;
    }

    .price {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .stock {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
    }

    .btn-primary:disabled {
        background-color: #bdc3c7;
        border-color: #bdc3c7;
    }
</style>

@code {
    [Parameter]
    public ProductDto Product { get; set; } = default!;

    [Parameter]
    public EventCallback<ProductDto> OnAddToCart { get; set; }
} 