@page "/"
@using E_Commerce.Models
@using E_Commerce.Services.Interfaces
@inject IProductService ProductService

<div class="container">
    <!-- Hero Section -->
    <div class="row align-items-center py-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Hoş Geldiniz!</h1>
            <p class="lead">En yeni ürünlerimizi keşfedin ve özel fırsatlardan yararlanın.</p>
            <a href="/products" class="btn btn-primary btn-lg">Alışverişe Başla</a>
        </div>
        <div class="col-md-6">
            <img src="images/hero-image.jpg" alt="Hero Image" class="img-fluid rounded shadow">
        </div>
    </div>

    <!-- Featured Products -->
    <div class="py-5">
        <h2 class="text-center mb-4">Öne Çıkan Ürünler</h2>
        
        @if (loading)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        }
        else if (error != null)
        {
            <div class="alert alert-danger" role="alert">
                @error
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in featuredProducts)
                {
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm">
                            <img src="images/product-placeholder.jpg" class="card-img-top" alt="@product.ProductName">
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0">@product.Price.ToString("C2")</span>
                                    <button class="btn btn-primary">
                                        <i class="bi bi-cart-plus"></i> Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Features -->
    <div class="row g-4 py-5">
        <div class="col-md-3">
            <div class="text-center">
                <i class="bi bi-truck display-4 text-primary"></i>
                <h4 class="mt-3">Ücretsiz Kargo</h4>
                <p class="text-muted">250 TL üzeri alışverişlerde</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <i class="bi bi-shield-check display-4 text-primary"></i>
                <h4 class="mt-3">Güvenli Ödeme</h4>
                <p class="text-muted">256-bit SSL güvenlik</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <i class="bi bi-arrow-counterclockwise display-4 text-primary"></i>
                <h4 class="mt-3">Kolay İade</h4>
                <p class="text-muted">14 gün içinde ücretsiz iade</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <i class="bi bi-headset display-4 text-primary"></i>
                <h4 class="mt-3">7/24 Destek</h4>
                <p class="text-muted">Her zaman yanınızdayız</p>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Product> featuredProducts = new();
    private bool loading = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            loading = true;
            var allProducts = await ProductService.GetAllProductsAsync();
            featuredProducts = allProducts.Take(4).ToList();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
} 